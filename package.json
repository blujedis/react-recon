{
  "name": "react-recon",
  "version": "1.0.3",
  "description": "React state management using Context API and Hooks",
  "main": "dist/index.js",
  "scripts": {
    "clean": "rimraf dist/*",
    "build": "npm run build:types && npm run build:js",
    "build:types": "tsc --emitDeclarationOnly",
    "build:js": "babel src --out-dir dist --extensions \".ts,.tsx\" --source-maps inline",
    "watch": "npm run build -- -w",
    "lint": "tslint --config ./tslint.json --project ./tsconfig.json",
    "docs": "typedoc ./src --options ./typedoc.json --out ./docs && touch ./docs/.nojekll",
    "test": "NODE_ENV=test jest",
    "prep": "npm run build && npm run lint && npm run test && npm run docs",
    "release": "npm run prep && bump patch --commit --push && npm publish"
  },
  "files": [
    "dist",
    "docs",
    "CHANGE.md",
    "LICENSE",
    "README.md"
  ],
  "author": "Blujedis <blujedicorp@gmail.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/blujedis/react-recon.git"
  },
  "license": "ISC",
  "dependencies": {
    "react": "^16.8.6",
    "react-dom": "^16.8.6"
  },
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.4.0",
    "@babel/plugin-proposal-class-properties": "^7.4.0",
    "@babel/plugin-proposal-object-rest-spread": "^7.4.0",
    "@babel/preset-env": "^7.4.5",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.3.3",
    "@types/node": "^11.11.3",
    "@types/react": "^16.8.19",
    "babel-jest": "^24.8.0",
    "enzyme": "^3.9.0",
    "jest": "^24.8.0",
    "react-test-renderer": "^16.8.6",
    "rimraf": "^2.6.3",
    "ts-node": "^8.0.3",
    "typedoc": "^0.14.2",
    "typescript": "^3.4.5"
  }
}
